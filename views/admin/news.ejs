<%- include('includes/head.ejs') %>
<title><%= pageTitle %></title>
</head>

<body class="admin">
    <%- include('includes/nav.ejs') %>
    <main>
        <div class="news">
            <ul class="news">
                <% news.forEach(function(item){ %>
                    <li>
                        <div class="item">
                            <div class="title">
                                <%= item.title %>
                            </div>

                            <div class="body">
                                <%= item.body %>
                            </div>
                        </div>
                        
                        <div class="actions">
                            <a href="news/<%= item.id %>">Edit</a>
                            <a href="news-delete/<%= item.id %>">Delete</a>
                        </div>
                    </li>
                <% }) %>
            </ul>    
        </div>
    </main>        
</body>
    